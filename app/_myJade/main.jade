					include _common/_sidebar

					.content-area
						block content

					include _common/_info

			include _common/_footer

		script(src="../bower/jquery/jquery.js")
		script(src="../js/jquery-ui.js")
		script(src="../js/jquery.columnizer.js")
		script(src="../js/select2.js")
		script(src="../js/main.js")
		






