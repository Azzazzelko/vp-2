include _common/_mixins

doctype html
html(lang='ru-Ru')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content="IE=edge")
		meta(name='viewport' content='width=device-width')
		title 
			block title
		link(rel="stylesheet", href="../css/main.css")
			
		include _common/_favicons
		
	body
		.wrapper

			include _common/_header

			main.content
				.container.clearfix

					.breadcrumbs
